    </row>
    <row>
      <entry>c' foo</entry>
      <entry>c' bar</entry>
    </row>
  </tbody>
</entrytbl>
<entry>b baz</entry>
</row>
<row>
<entry>c foo</entry>
<entry>c bar</entry>
<entry>c baz</entry>
</row>
</tbody>
</tgroup>
</informaltable>

