#!/usr/bin/make -f

#export DH_VERBOSE=1
export PYBUILD_NAME=keyman-config
export PYBUILD_INSTALL_ARGS=--install-scripts=/usr/share/keyman-config/

%:
	dh $@ --with python3 --buildsystem=pybuild --with bash-completion

override_dh_auto_install:
	install -d debian/keyman-config/usr/share/glib-2.0/schemas/
	install com.keyman.gschema.xml debian/keyman-config/usr/share/glib-2.0/schemas/
	dh_auto_install $@
