	<description>KMFL Component</description>
	<exec>${libexecdir}/ibus-engine-kmfl --ibus</exec>
	<version>@VERSION@</version>
	<author>Doug Rintoul &lt;doug_rintoul@sil.org&gt;</author>
	<license>GPL</license>
