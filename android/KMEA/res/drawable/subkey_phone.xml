<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  
  <item android:state_pressed="true" >
    <shape>
        <gradient
        	android:startColor="#0084FF"
         	android:endColor="#0074DB"
        	android:angle="90" />
      	<stroke
        	android:width="1dp"
          	android:color="#858585" />
      	<corners
        	android:radius="2dp" />
    </shape>
  </item>
  
  <item>
    <shape>
        <gradient
        	android:startColor="#636363"
          	android:endColor="#5C5C5C"
          	android:angle="90" />
      	<stroke
          	android:width="1dp"
          	android:color="#858585" />
      	<corners
          	android:radius="2dp" />
    </shape>
  </item>
  
</selector>