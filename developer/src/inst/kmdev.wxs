    <Property Id="ALLUSERS"><![CDATA[1]]></Property>

    <Condition Message="Keyman Developer requires Windows 7 or later"><![CDATA[Installed OR (VersionNT >= 601)]]></Condition>

    <Directory Id='TARGETDIR' Name='SourceDir' DiskId='1'>
