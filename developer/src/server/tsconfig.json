{
  "extends": "../../../tsconfig-base.json",

  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "lib": ["es2022"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    { "path": "../../../common/web/keyman-version" }
  ]
}
