{
  "name": "@keymanapp/kmc-package",
  "description": "Keyman Developer package compiler",
  "keywords": [
    "keyboard",
    "keyman",
    "unicode"
  ],
  "type": "module",
  "exports": {
    ".": "./build/src/main.js"
  },
  "files": [
    "/build/src/"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint .",
    "test": "npm run lint && cd test && tsc -b && cd .. && c8 --reporter=lcov --reporter=text mocha",
    "coverage": "npm test",
    "prepublishOnly": "npm run build"
  },
  "author": "Marc Durdin <marc@keyman.com> (https://github.com/mcdurdin)",
  "contributors": [
    "Eddie Antonio Santos <Eddie.Santos@nrc-cnrc.gc.ca>",
    "Joshua Horton"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keymanapp/keyman/issues"
  },
  "dependencies": {
    "jszip": "^3.7.0",
    "@keymanapp/common-types": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.6",
    "c8": "^7.12.0",
    "chai": "^4.3.4",
    "chalk": "^2.4.2",
    "mocha": "^8.4.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.9.5",
    "@keymanapp/developer-test-helpers": "*"
  },
  "mocha": {
    "spec": "build/test/**/test-*.js",
    "require": [
      "source-map-support/register"
    ]
  },
  "c8": {
    "all": true,
    "src": [
      "src/"
    ],
    "exclude-after-remap": true,
    "exclude": [
      "test/",
      "src/main.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keymanapp/keyman.git"
  }
}
