{
  "extends": "../kmc/tsconfig.kmc-base.json",

  "compilerOptions": {
    "outDir": "build/src/",
    "rootDir": "src/",
    /*
      following two settings allow us to import langtags.js. It cannot be a .ts
      because the type is too complex for TypeScript to infer.
    */
    "allowJs": true,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts",
    "src/ttfmeta/lib/*.js",
    "src/imports/langtags.js",
  ],
}
